<!DOCTYPE html>
<html>
  <head>
    <title>Jetruby: Appointments</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= render 'auth_links' %>
      <%= yield %>
    <% else %>
      <%= link_to image_tag('btn_google_signin_dark_normal_web.png', alt: 'Sign in with Google'), '/auth/google_oauth2', id: 'sign_in' %>
    <% end %>
  </body>
</html>
